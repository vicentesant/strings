/**********

6) El usuario ingresa una palabra. Determinar qué letra aparece mayor cantidad de veces.
Para simplificar el problema, trabaje solo con mayúsculas.


*********/

#include <stdio.h>

int main()
{
    char palabras[20];
    int i; 
    int letras[27];
    int mayor=0;
    int a;
    int j;
    int z=0;
    int h;
    char magicogonzales[27];
    
    printf("Ingrese una palabra:"); // Se pide el ingreso de la palabra
    scanf("%s", &palabras);
    
    for(i=0; i<=27; i++ ){
    letras[i] = 0;}
    
    
    for(i=0; i<=20; i++ ){
        
        if(palabras[i] == 'A'){ //Se compara con cada letra del abecedario (mayusculas)
           letras[1]++;
           magicogonzales[1] = 'A';
        }
        
        if(palabras[i] == 'B'){
            letras[2]++;
            magicogonzales[2] = 'B';
        }
      
        if(palabras[i] == 'C'){
            letras[3]++;
            magicogonzales[3] = 'C';
        }
        if(palabras[i] == 'D'){
            letras[4]++;
            magicogonzales[4] = 'D';
        }
     
        if(palabras[i] == 'E'){
            letras[5]++;
            magicogonzales[5] = 'E';
        }
  
        
        if(palabras[i] == 'F'){ 
            magicogonzales[6] = 'F';
            letras[6]++;
        }
        
        if(palabras[i] == 'G'){
            letras[7]++;
            magicogonzales[7] = 'G';
        }
        
        if(palabras[i] == 'H'){
            letras[8]++;
            magicogonzales[8] = 'H';
        }
        if(palabras[i] == 'I'){
            letras[9]++;
            magicogonzales[9] = 'I';
        }
        
        if(palabras[i] == 'J'){
            letras[10]++;
            magicogonzales[10] = 'J';
       
    }
        if(palabras[i] == 'K'){ 
            letras[11]++;
            magicogonzales[11] = 'K';
        }
        
        if(palabras[i] == 'L'){
            letras[12]++;
            magicogonzales[12] = 'L';
        }
      
        if(palabras[i] == 'M'){
            letras[13]++;
            magicogonzales[13] = 'M';
        }
        if(palabras[i] == 'N'){
            letras[14]++;
            magicogonzales[14] = 'N';
        }
     
        if(palabras[i] == 'Ñ'){
            letras[15]++;
            magicogonzales[15] = 'Ñ';
        }
  
        
        if(palabras[i] == 'O'){ 
            letras[16]++;
            magicogonzales[16] = 'O';
        }
        
        if(palabras[i] == 'P'){
            letras[17]++;
            magicogonzales[17] = 'P';
        }
        
        if(palabras[i] == 'Q'){
            letras[18]++;
            magicogonzales[18] = 'Q';
        }
        if(palabras[i] == 'R'){
            letras[19]++;
            magicogonzales[19] = 'R';
        }
        
        if(palabras[i] == 'S'){
            letras[20]++;
            magicogonzales[20] = 'S';
       
    }
    if(palabras[i] == 'T'){
            letras[21]++;
            magicogonzales[21] = 'T';
        }
        
        if(palabras[i] == 'U'){
            letras[22]++;
            magicogonzales[22] = 'U';
       
    }
        if(palabras[i] == 'V'){ 
            letras[23]++;
            magicogonzales[23] = 'V';
        }
        
        if(palabras[i] == 'W'){
            letras[24]++;
            magicogonzales[24] = 'W';
        }
      
        if(palabras[i] == 'X'){
            letras[25]++;
            magicogonzales[25] = 'X';
        }
        if(palabras[i] == 'Y'){
            letras[26]++;
            magicogonzales[26] = 'Y';
        }
     
        if(palabras[i] == 'Z'){
            letras[27]++;
            magicogonzales[27] = 'Z';
        }
  
    

    
        
    
  
    z=0;
        mayor = letras[0];
    for(int i = 0; i < 27; ++i)
    {
        
        
        if(letras[i] > mayor)
        {
            mayor = letras[i];
            a = i;
        }
        
         
       
         
    }
    }
    
  
    
    if(z==0){
    printf( "La letra que mas se repite es la %c con %d ocurrencias ",magicogonzales[a],letras[a] );}
        
        
        
}
